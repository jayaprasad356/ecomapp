<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.DocumentuploadFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    <LinearLayout
        android:id="@+id/processLyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:drawablePadding="@dimen/_10sdp"
            android:text="Details"
            android:textSize="@dimen/_12sdp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/gray"
            app:drawableStartCompat="@drawable/ic_next_process" />

        <TextView
            android:id="@+id/tvSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:drawablePadding="@dimen/_10sdp"
            android:text="Upload Document"
            android:textSize="@dimen/_12sdp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorText"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/ic_next_process_gray" />


        <TextView
            android:id="@+id/tvPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_10sdp"
            android:text="Approval"
            android:textSize="@dimen/_12sdp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/gray"
            app:drawableStartCompat="@drawable/ic_next_process_gray" />
    </LinearLayout>
        
        
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload PAN Card"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:background="@color/bg_gray"
            android:padding="@dimen/_10sdp"
            android:textStyle="bold"
            android:drawableEnd="@drawable/ic_baseline_cloud_upload_24"
            />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Adhaar Card"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:background="@color/bg_gray"
            android:padding="@dimen/_10sdp"
            android:textStyle="bold"
            android:drawableEnd="@drawable/ic_baseline_cloud_upload_24"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload TM /R Certificate(for manufacture)"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:background="@color/bg_gray"
            android:padding="@dimen/_10sdp"
            android:textStyle="bold"
            android:drawableEnd="@drawable/ic_baseline_cloud_upload_24"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Gumasta / Anugyapti certificate"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_50sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:background="@color/bg_gray"
            android:padding="@dimen/_10sdp"
            android:textStyle="bold"
            android:drawableEnd="@drawable/ic_baseline_cloud_upload_24"
            />





        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_shadow"
            android:backgroundTint="@color/bg_gray"
            android:paddingTop="@dimen/_18sdp"
            android:paddingBottom="@dimen/_18sdp"
            android:text="Submit"
            android:textAllCaps="false"
            android:layout_margin="@dimen/_10sdp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />




    </LinearLayout>



</FrameLayout>